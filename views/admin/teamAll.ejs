<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Jamoa</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="example3" class="display" style="min-width: 845px">
                    <thead>
                        <tr>
                            <th>Rasm</th>
                            <th>Ism</th>
                            <th>Telefon raqam</th>
                            <th>Kasb</th>
                            <th>Tahrirlash</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let item of team) { %>
                        <tr> 
                            <td><img class="rounded-circle" width="35" src="/uploads/team/<%= item.image %>" alt="Team member photo"></td>
                            <td><%= item.name %></td>
                            <td><%= item.phone %></td>
                            <td><%= item.job %></td>
                           <td> 
                                <div class="d-flex">
                                    <a href="/team/<%= item._id %>" class="btn btn-primary shadow btn-xs sharp me-1"><i class="fas fa-pencil-alt"></i></a>
                                    <a href="#" class="btn btn-primary shadow btn-xs sharp me-1"><i class="fas fa-file-alt"></i></a>
                                    
                                    <form method="POST" class="hidden-r" action="<%=`/team/delete/${item._id}?_method=DELETE`%>">
                                        <button type="submit" class="btn btn-danger shadow btn-xs sharp me-1">
                                          <i class="fa fa-trash"></i>
                                         </button>
                                      </form>
                                </div>												
                            </td>												
                        </tr>
                        <%}%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>