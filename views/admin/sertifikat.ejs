<h1>Sertifikat qo'shish</h1>
<div>
    <div class="col-xl-6 col-lg-6">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Sertifikat qo'shish</h4>
            </div>
            <div class="card-body">
                <div class="basic-form">
                    <form action="/ariza/add" method="POST" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label">O'quvchini tanlang</label>
                            <select name="user_Id" class="default-select  form-control wide">
                                <% for (let item of userAll) { %>
                                <option value="<%= item._id %>"><%= item.name %></option>
                                <%}%>
                            </select>
                        </div>
                        <br>
                        <div class="mb-3">
                            <label class="form-label">O'quvchini tanlang</label>
                            <select name="name" class="default-select  form-control wide">
                                <% for (let item of userAll) { %>
                                <option value="<%= item.name %>"><%= item.name %></option>
                                <%}%>
                            </select>
                        </div>
                        <br>
                        <div class="mt-4 mb-3"> 
                            <input 
                                type="file"  
                                class="form-control input-default" 
                                placeholder="Sertifikatni PDF variantini tanlang"
                                name="pdf"
                                required="true"
                            >
                        </div>
 
                       <button class="btn btn-primary" type="submit">Yuklash</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>  

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Serifikatlar</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-responsive-md">
                    <thead>
                        <tr>
                            <th><strong>Name</strong></th>
                            <th><strong>Pdf</strong></th>
                            <th><strong></strong></th>
                        </tr>
                    </thead>
                    <tbody> 
                        <% for (let item of ariza) { %>
                        <tr>
                            <td><strong><%= item.name %></strong></td>
                            <td><%= item.pdf %></td>
                            <td>
                                <div class="d-flex">
                                    <a href="#" class="btn btn-primary shadow btn-xs sharp me-1"><i class="fas fa-pencil-alt"></i></a>
                                    <form method="POST" class="hidden-r" action="<%=`/ariza/delete/${item._id}?_method=DELETE`%>">
                                        <button type="submit" class="btn btn-danger shadow btn-xs sharp me-1">
                                          <i class="fa fa-trash"></i>
                                         </button>
                                      </form>
                                </div>
                            </td>
                        </tr>
                        <%}%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



